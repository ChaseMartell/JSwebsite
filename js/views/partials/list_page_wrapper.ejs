<main class="tableSearch">
    <div class="row">
      <div class="col-8">
            <h1></h1>
          </div>
           <div class="col-4 d-flex justify-content-end">
              <input id="searchInput" class="w-75 me-2 p-1" placeholder="Search...">
              <button id="clearSearch" class="btn btn-info">Clear</button>
            </div>
       
        </div>
      <div class="col-12">
        <div id="<%=viewModel.alertContainerId%>" class="mt-2"></div>
        <div id="tableContainer" class="mt-2">
  
        </div>
        <button id="newButton" class="btn btn-success clear-search-btn ml-2" data-bs-toggle="modal" data-bs-target="#<%=viewModel.editModalContainerId%>">Create Team</button>
        <button id="resetView" class="btn btn-primary clear-search-btn ml-2">Reset View</button>
      </div>
    </div>
  </main>
  
  <div class="modal" id="deleteModal">
    <div class="modal-dialog">
      <div class="modal-content">

        <div class="modal-header">
          <h4 class="modal-title">Delete Item?</h4>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">
          Are you sure that you would like to delete the selected team? This action cannot be undone.
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-bs-dismiss="modal">No</button>
          <button id="yesButton" type="button" class="btn btn-primary" data-bs-dismiss="modal">Yes</button>
        </div>
  
      </div>
    </div>
  </div>

  <div class="modal" id="editModal" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog">
      <div class="modal-content">

        <div class="modal-body" id="formContainer">
          
        </div>

      </div>
    </div>
  </div>
